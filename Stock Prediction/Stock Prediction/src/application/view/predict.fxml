<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.controller.PredictionController"
            stylesheets="@style.css"
            prefHeight="500.0" prefWidth="800.0">


    <Label layoutX="20" layoutY="20" text="🔮 Stock Price Prediction"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <VBox layoutX="50" layoutY="60" spacing="10" styleClass="card" prefWidth="700">
        <Label text="Select Stock:"/>
        <ComboBox fx:id="stockDropdown" prefWidth="200"/>

        <Button text="Predict" onAction="#onPredict"/>
        <Label fx:id="predictionResult"/>
    </VBox>

    <LineChart fx:id="lineChart" layoutX="50" layoutY="230" prefWidth="700" prefHeight="230">
        <xAxis>
            <CategoryAxis label="Date"/>
        </xAxis>
        <yAxis>
            <NumberAxis label="Price"/>
        </yAxis>
    </LineChart>

    <Button layoutX="50" layoutY="470" text="🏠 Home" onAction="#onGoHome"/>
</AnchorPane>
